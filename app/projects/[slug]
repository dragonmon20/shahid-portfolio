// File: app/projects/[slug]/page.tsx
import { notFound } from "next/navigation";

const projectData: Record<string, {
  title: string;
  description: string;
  techStack: string[];
}> = {
  "smart-portfolio": {
    title: "Smart Portfolio App",
    description: "A fast, mobile-ready portfolio site with smooth animations.",
    techStack: ["Next.js", "Tailwind CSS", "Framer Motion"],
  },
  "fitness-tracker": {
    title: "Fitness Tracker UI",
    description: "Track workouts, goals, and performance in a stylish dashboard.",
    techStack: ["React", "Tailwind", "Chart.js"],
  },
};

export default function ProjectDetail({ params }: { params: { slug: string } }) {
  const project = projectData[params.slug];

  if (!project) return notFound();

  return (
    <main className="min-h-screen bg-gray-950 text-white px-6 py-12 max-w-4xl mx-auto">
      <h1 className="text-4xl font-bold mb-4 text-blue-400">{project.title}</h1>
      <p className="text-gray-300 text-lg mb-6">{project.description}</p>

      <h2 className="text-2xl font-semibold mb-2 text-gray-200">Tech Stack:</h2>
      <ul className="list-disc ml-6 text-gray-400">
        {project.techStack.map((tech) => (
          <li key={tech}>{tech}</li>
        ))}
      </ul>
    </main>
  );
}
